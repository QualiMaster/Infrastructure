<assembly>
    <id>hardware</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
 
    <fileSets>
        <fileSet>
            <directory>hardware</directory>
            <outputDirectory></outputDirectory> 
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <includeSubModules>false</includeSubModules>
            <sources>
			    <fileSets>
			        <fileSet>
			            <directory>hardware</directory>
			            <outputDirectory></outputDirectory> 
			            <includes>
			                <include>*.*</include>
			            </includes>
			        </fileSet>
			    </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>